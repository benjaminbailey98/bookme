
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function getVenueOwnerId(venueProfileId) {
      return get(/databases/$(database)/documents/venue_profiles/$(venueProfileId)).data.userId;
    }

    function isVenueOwner(venueProfileId) {
      return isOwner(getVenueOwnerId(venueProfileId));
    }
    
    function getArtistOwnerId(artistProfileId) {
      return get(/databases/$(database)/documents/artist_profiles/$(artistProfileId)).data.userId;
    }

    function isArtistOwner(artistProfileId) {
      return isOwner(getArtistOwnerId(artistProfileId));
    }

    function isBookingParticipant(bookingDoc) {
      let venueOwnerId = getVenueOwnerId(bookingDoc.venueProfileId);
      let artistOwnerId = getArtistOwnerId(bookingDoc.artistProfileId);
      return isOwner(venueOwnerId) || isOwner(artistOwnerId);
    }
    
    // User Management
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Public Profiles
    match /artist_profiles/{artistProfileId} {
      allow get, list: if true;
      allow create, update, delete: if isOwner(get(/databases/$(database)/documents/artist_profiles/$(artistProfileId)).data.userId) || isAdmin();
      
      match /availability/{availabilityId} {
        allow get, list: if true;
        allow write: if isArtistOwner(artistProfileId) || isAdmin();
      }
    }

    match /venue_profiles/{venueProfileId} {
      allow get, list: if true;
      allow create, update, delete: if isOwner(get(/databases/$(database)/documents/venue_profiles/$(venueProfileId)).data.userId) || isAdmin();

      match /booking_requests/{bookingRequestId} {
        allow get, list: if isVenueOwner(venueProfileId) || isAdmin();
        allow create: if true; // Allow anyone to create a booking request
        allow update, delete: if isSignedIn() && (isBookingParticipant(resource.data) || isAdmin());
      }
    }
    
    // Collection Group Queries
    match /{path=**}/booking_requests/{bookingRequestId} {
      // Allow artists to query for their own bookings across all venues
      allow list: if isSignedIn() && request.query.where.size() > 0 && request.query.where[0][1] == 'artistProfileId';
    }

    // Reviews
    match /reviews/{reviewId} {
      allow get, list: if true; // Publicly readable
      allow create: if isSignedIn(); // Logged-in users can create reviews
      allow update, delete: if false; // Immutable
    }
    
    // Subscriptions
    match /users/{userId}/subscriptions/{subscriptionId} {
        allow read, write: if isOwner(userId) || isAdmin();
    }

    // Referrals
    match /referrals/{referralId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}
